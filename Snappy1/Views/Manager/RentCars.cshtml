@model IEnumerable<Snappy1.Models.CarRental>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RentCars</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Pickup)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dropoff)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookingStartdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookingEnddate)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Car)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pickup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dropoff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingStartdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingEnddate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationNameNavigation.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsernameNavigation.Username)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RentalId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RentalId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RentalId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
